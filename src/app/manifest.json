{
  "manifest_version": 2,
  "name": "NASA Acronyms",
  "description": "Select a NASA acronym to expand it.",
  "version": "1.5",

  "browser_action": {
    "default_icon": "images/nasa-logo.png"
  },

  "background": {
    "scripts": [
      "background.bundle.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://*.nasaacronyms.com/*"],
      "js": [
        "content_script.bundle.js"
      ],
      "css": ["jquery.qtip-3.0.3.min.css"]
    }
  ],

  "permissions": [
    "activeTab"
  ],

  "icons": {
    "16": "images/nasa-logo16.png",
    "48": "images/nasa-logo48.png",
    "128": "images/nasa-logo128.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
